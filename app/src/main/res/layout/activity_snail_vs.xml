<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.kris.minigamesclash.SnailVSActivity">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FF80">
        <TextView
            android:id="@+id/temps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0.0"
            android:textSize="40sp"
            android:textColor="#FF6600"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/snail1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/snail"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/snail2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/snail2"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="25dp"
            android:text="Retour au menu" />

    </FrameLayout>

</LinearLayout>
